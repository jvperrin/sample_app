<%= form_for(@micropost) do |f| %>
  <%= render 'shared/error_messages', object: f.object %>
  <div class="field">
    <%= f.text_area :content, placeholder: "Compose new micropost...", :rows => "10" %>
  </div>
  <%= f.submit "Post", class: "btn btn-large btn-primary" %>
  <span id="micropost_content_counter">140 characters remaining</span>
<% end %>